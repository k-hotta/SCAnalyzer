<?xml version="1.0" encoding="UTF-8"?>

<config>
	<general>
		<dbms>SQLITE</dbms>
		<overwrite>true</overwrite>
	</general>
	<target>
		<name>clone-tracker</name>
		<language>JAVA</language>
		<element>TOKEN</element>
		<repository>src/test/resources/repository-clonetracker</repository>
		<relative>/c20r_main/src</relative>
		<version-control>SVN</version-control>
		<database>src/test/resources/test.db</database>
		<start>1</start>
		<end>419</end>
	</target>
	<clone-detection>
		<detector>Scorpio</detector>
		<result-directory>src/test/resources/scorpio-clonetracker-result/</result-directory>
		<filename-format>scorpio-%s.txt</filename-format>
	</clone-detection>
	<mapping>
		<relocation>null</relocation>
		<equalizer>near_miss</equalizer>
		<clone-mapping>ICLONES</clone-mapping>
		<element-mapping>Traditional_diff</element-mapping>
	</mapping>
	<mining>
		<common-configuration>
			<unit>GENEALOGY</unit>
			<max-retrieved>1000</max-retrieved>
			<output-file-pattern>
				src/test/resources/$$strategy_name$$-$$project_name$$.csv
			</output-file-pattern>
		</common-configuration>
		<strategies>
			<strategy>
				GENEALOGY_SIMILARITY_GHOST_PERIOD
			</strategy>
			<strategy>
				GENEALOGY_COMMON_ELEMENTS_PERIOD
			</strategy>
			<strategy>
				GENEALOGY_MODIFICATIONS
			</strategy>
			<strategy>
				GENEALOGY_SIMILARITY_GHOST_AVERAGE
			</strategy>
		</strategies>
	</mining>
</config>